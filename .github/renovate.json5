{
  "extends": [
    "github>busybeaver/homelab-shared//.github/renovate.json5",
    ":docker",
    "docker:pinDigests",
    "docker:enableMajor",
    "regexManagers:dockerfileVersions",
  ],
  "pip_requirements": {
    // https://docs.renovatebot.com/python/#alternative-file-names
    "fileMatch": [
      "^\\.github\\/workflows\\/.+\\.pip$",
    ]
  },
  "regexManagers": [
    {
      // adopted from:
      // https://github.com/renovatebot/renovate/blob/main/lib/config/presets/internal/regex-managers.ts
      // https://docs.renovatebot.com/presets-regexManagers/#regexmanagersdockerfileversions
      description: "Update '_VERSION' variables in shell scripts.",
      "fileMatch": [
        "^scripts\\/.+\\.sh$",
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?) depName=(?<depName>[^\\s]+?)(?: (lookupName|packageName)=(?<packageName>[^\\s]+?))?(?: versioning=(?<versioning>[a-z-0-9]+?))?\\s.+?_VERSION=\"?(?<currentValue>.+?)\"?\\s"
      ]
    }
  ],
  "packageRules": [
    {
      // until the repology bug is fixed: https://github.com/renovatebot/renovate/issues/18144
      "description": "Disable repology datasource",
      "matchDatasources": [ "repology" ],
      "enabled": false
    },
  ],
}
