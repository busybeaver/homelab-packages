{
  "extends": [
    "config:base",
    ":docker",
    "docker:pinDigests",
    "docker:enableMajor",
    ":semanticCommits",
    ":semanticPrefixFixDepsChoreOthers",
    ":rebaseStalePrs",
    ":prHourlyLimit4",
    ":prConcurrentLimit10",
    ":maintainLockFilesWeekly",
    ":enableVulnerabilityAlerts",
    ":disableDependencyDashboard",
    "helpers:pinGitHubActionDigests",
    // "default:automergeDigest",
  ],
  "labels": ["dependencies"],
  "rebaseWhen": "behind-base-branch",
  "packageRules": [
    {
      "description": "Minor and patch-level updates with usually no breaking changes",
      "matchUpdateTypes": ["minor", "patch", "digest", "pin", "lockFileMaintenance"],
      "stabilityDays": 5,
      "assignees": ["busybeaver"],
      "reviewers": ["repository-assistant[bot]"]
    },
    {
      "description": "Major updates with breaking changes",
      "matchUpdateTypes": ["major"],
      "stabilityDays": 7,
      "assignees": ["busybeaver"],
      "reviewers": ["repository-assistant[bot]", "busybeaver"],
      "addLabels": ["major-update"]
    }
  ],
  "pip_requirements": {
    "fileMatch": [".*\\.pip$"]
  }
}
